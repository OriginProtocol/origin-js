{
  "name": "origin",
  "version": "0.7.1",
  "description": "",
  "engines": {
    "node": "9.11.1"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "format": "npx prettier-eslint --write 'src/**/*.js' 'test/**/*test.js' 'contracts/test/**/*.js' 'scripts/**/*.js'",
    "install:dev": "npm install && npm link",
    "prepare": "npm run build",
    "start": "node scripts/build.js serve",
    "start:no-ganache": "node scripts/build.js serve no-ganache",
    "test": "node scripts/test.js",
    "test:truffle": "node scripts/test-truffle.js",
    "test:js": "node scripts/test-js.js",
    "test:jsw": "node scripts/test-js.js --watch",
    "test:contracts": "mocha -r babel-register -r babel-polyfill -t 10000 --exit contracts/test-alt/",
    "test:contractsw": "mocha -r babel-register -r babel-polyfill -t 10000 -w --watch-extensions sol contracts/test-alt/",
    "test:contracts-coverage": "SOLIDITY_COVERAGE=1 npx solidity-coverage"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OriginProtocol/origin-js"
  },
  "author": "Stan James <stan@originprotocol.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.5.0",
    "babel-polyfill": "^6.26.0",
    "bs58": "^4.0.1",
    "cross-fetch": "^2.1.1",
    "crypto-js": "^3.1.9-1",
    "ethereumjs-util": "^5.2.0",
    "form-data": "^2.3.2",
    "map-cache": "^0.2.2",
    "openzeppelin-solidity": "1.10.0",
    "rlp": "^2.0.0",
    "store": "^2.0.12",
    "url-parse": "^1.4.0",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bignumber.js": "^7.2.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "chai-string": "1.4.0",
    "chalk": "^2.4.1",
    "eth-gas-reporter": "^0.1.2",
    "fetch-mock": "^6.3.0",
    "flow-bin": "^0.71.0",
    "fs-extra": "^7.0.0",
    "ganache-core": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "ipfs": "^0.28.2",
    "ipfs-api": "^20.2.1",
    "mocha": "^5.1.1",
    "mocha-loader": "^1.1.3",
    "node-watch": "^0.5.8",
    "prettier-eslint-cli": "^4.7.1",
    "sinon": "^5.1.1",
    "solc": "^0.4.24",
    "solidity-coverage": "^0.5.10",
    "truffle": "^4.1.8",
    "truffle-contract": "^3.0.5",
    "truffle-hdwallet-provider": "0.0.5",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true
    },
    "globals": {
      "artifacts": true,
      "assert": true,
      "contract": true,
      "expect": true,
      "web3": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-console": [
        "off"
      ],
      "no-var": [
        "error"
      ],
      "prefer-const": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  }
}
